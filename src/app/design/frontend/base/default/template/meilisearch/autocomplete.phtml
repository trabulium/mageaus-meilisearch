<?php
/**
 * Meilisearch Autocomplete Search Box Template
 */

/** @var $this Mage_Core_Block_Template */
/** @var Mage_CatalogSearch_Helper_Data $catalogSearchHelper */
$catalogSearchHelper = $this->helper('catalogsearch');
?>
<form id="search_mini_form" action="<?php echo $catalogSearchHelper->getResultUrl() ?>" method="get">
    <div class="form-search">
        <label for="search"><?php echo $this->__('Search:') ?></label>
        <input id="search" 
               type="text" 
               name="<?php echo $catalogSearchHelper->getQueryParamName() ?>" 
               value="<?php echo $catalogSearchHelper->getEscapedQueryText() ?>" 
               class="input-text" 
               placeholder="<?php echo $this->__('Search entire store here...') ?>"
               autocomplete="off" />
        <button type="submit" title="<?php echo $this->__('Search') ?>" class="button"><span><span><?php echo $this->__('Search') ?></span></span></button>
        <div id="search_autocomplete" class="search-autocomplete"></div>
        <script type="text/javascript">
        //<![CDATA[
            // Magento's default autocomplete - we'll override this with Meilisearch
            var searchForm = new Varien.searchForm('search_mini_form', 'search', '');
            searchForm.initAutocomplete('<?php echo $catalogSearchHelper->getSuggestUrl() ?>', 'search_autocomplete');
        //]]>
        </script>
    </div>
</form>