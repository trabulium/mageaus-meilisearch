                </search_indexer_suggest>
                <search_indexer_addsections>
                    <model>meilisearch_search/indexer_meilisearchadditionalsections</model>
                </search_indexer_addsections>
                <meilisearch_queue_runner>
                    <model>meilisearch_search/indexer_meilisearchqueuerunner</model>
                </meilisearch_queue_runner>
                <meilisearch_delete_products>
                    <model>meilisearch_search/indexer_meilisearchdeleteproducts</model>
                </meilisearch_delete_products>
            </indexer>
        </index>
        <fieldsets>
            <sales_convert_quote_item>
                <meilisearch_query_param>
                    <to_order_item>*</to_order_item>
                </meilisearch_query_param>
            </sales_convert_quote_item>
        </fieldsets>
    </global>
