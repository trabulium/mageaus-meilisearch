<?xml version="1.0"?>
<config>
    <modules>
        <Meilisearch_Search>
            <version>1.19.0</version>
        </Meilisearch_Search>
    </modules>
    <frontend>
        <routers>
            <meilisearch>
                <use>standard</use>
                <args>
                    <module>Meilisearch_Search</module>
                    <frontName>meilisearch</frontName>
                </args>
            </meilisearch>
        </routers>
        <layout>
            <updates>
                <meilisearch>
                    <file>meilisearch.xml</file>
                </meilisearch>
            </updates>
        </layout>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <meilisearch_search>
                        <type>singleton</type>
                        <class>meilisearch_search/observer</class>
                        <method>useMeilisearchSearchPopup</method>
                    </meilisearch_search>
                </observers>
            </controller_action_layout_load_before>
        </events>
        <translate>
            <modules>
                <Meilisearch_Search>
                    <files>
                        <default>Meilisearch_Search.csv</default>
                    </files>
                </Meilisearch_Search>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <meilisearch>
                    <file>meilisearch.xml</file>
                </meilisearch>
            </updates>
        </layout>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <meilisearch_search>
                        <type>singleton</type>
                        <class>meilisearch_search/observer</class>
                        <method>addBundleToAdmin</method>
                    </meilisearch_search>
                </observers>
            </controller_action_layout_load_before>
        </events>
        <translate>
            <modules>
                <Meilisearch_Search>
                    <files>
                        <default>Meilisearch_Search.csv</default>
                    </files>
                </Meilisearch_Search>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <meilisearch before="Mage_Adminhtml">Meilisearch_Search_Adminhtml</meilisearch>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <helpers>
            <meilisearch_search>
                <class>Meilisearch_Search_Helper</class>
            </meilisearch_search>
        </helpers>
        <blocks>
            <meilisearch_search>
                <class>Meilisearch_Search_Block</class>
            </meilisearch_search>
        </blocks>
        <models>
            <meilisearch_search>
                <class>Meilisearch_Search_Model</class>
                <resourceModel>meilisearch_search_resource</resourceModel>
            </meilisearch_search>
            <meilisearch_search_resource>
                <class>Meilisearch_Search_Model_Resource</class>
                <entities>
                    <queue>
                        <table>meilisearch_queue</table>
                    </queue>
                    <job>
                        <table>meilisearch_queue</table>
                    </job>
                    <queue_log>
                        <table>meilisearch_queue_log</table>
                    </queue_log>
                    <queue_archive>
                        <table>meilisearch_queue_archive</table>
                    </queue_archive>
                </entities>
            </meilisearch_search_resource>
            <catalogsearch_mysql4>
                <rewrite>
                    <fulltext>Meilisearch_Search_Model_Resource_Fulltext</fulltext>
                    <fulltext_collection>Meilisearch_Search_Model_Resource_Fulltext_Collection</fulltext_collection>
                </rewrite>
            </catalogsearch_mysql4>
            <catalogsearch_resource>
                <rewrite>
                    <fulltext>Meilisearch_Search_Model_Resource_Fulltext</fulltext>
                    <fulltext_collection>Meilisearch_Search_Model_Resource_Fulltext_Collection</fulltext_collection>
                </rewrite>
            </catalogsearch_resource>
        </models>
        <events>
            <admin_system_config_changed_section_meilisearch>
                <observers>
                    <meilisearch_search>
                        <type>singleton</type>
                        <class>meilisearch_search/observer</class>
                        <method>configSaved</method>
                    </meilisearch_search>
                </observers>
            </admin_system_config_changed_section_meilisearch>

            <catalog_product_save_before>
                <observers>
                    <meilisearch_stockupdate>
                        <class>meilisearch_search/observer</class>
                        <method>saveProduct</method>
                    </meilisearch_stockupdate>
                </observers>
            </catalog_product_save_before>

            <cms_page_save_commit_after>
                <observers>
                    <meilisearch_savepage>
                        <class>meilisearch_search/observer</class>
                        <method>savePage</method>
                    </meilisearch_savepage>
                </observers>
            </cms_page_save_commit_after>

            <!-- Click & Conversion Analytics observers removed - was Algolia-specific -->

        </events>
        <resources>
            <meilisearch_setup>
                <setup>
                    <module>Meilisearch_Search</module>
                </setup>
            </meilisearch_setup>
        </resources>
        <index>
            <indexer>
                <meilisearch_search_indexer>
                    <model>meilisearch_search/indexer_meilisearch</model>
                </meilisearch_search_indexer>
                <meilisearch_search_indexer_cat>
                    <model>meilisearch_search/indexer_meilisearchcategories</model>
                </meilisearch_search_indexer_cat>
